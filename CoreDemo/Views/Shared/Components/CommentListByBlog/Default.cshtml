@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    @if (Model.Count() > 0)
    {
        <h4>Yorumlar</h4>
        
        @foreach (var item in Model)
        {

            <div class="media">
                <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                    <br />
                </div>
            </div>
        }
        <h4>Bir Yorum Bırakın</h4>

    }
    else
    {
        <h4>Bu blogda henüz yorum yok. İlk yorumu siz yazın.</h4>
    }
</div>
@using EntityLayer.Concrete
@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bloglar</h4>
                <div class="table-bordered & table-striped & table-success">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = Model.Count-1; i > Model.Count - 11; i--)
                            {
                                <tr>
                                    <td>
                                        <img src="@Model[i].BlogImage " class="mr-2" alt="image">
                                    </td>
                                    <td>
                                        @Model[i].BlogTitle
                                    </td>
                                    <td>
                                        <label class="badge badge-gradient-danger">@Model[i].Category.CategoryName</label>
                                    </td>
                                    <td> @(((DateTime)Model[i].BlogCreateDate).ToString("dd-MMM-yyyy")) </td>
                                    <td>
                                        <a href="/Blog/BlogReadAll/@Model[i].BlogID" class="btn btn-gradient-primary">Detaylar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>